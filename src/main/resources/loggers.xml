<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="eventLogger" class="vmelnychuk.spring.loggers.ConsoleEventLogger" />

    <bean id="fileLogger" class="vmelnychuk.spring.loggers.FileEventLogger" lazy-init="true" init-method="init">
        <constructor-arg value="D:\tmp\log.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="vmelnychuk.spring.loggers.CacheFileEventLogger" parent="fileLogger" destroy-method="destroy">
        <constructor-arg value="100"/>
    </bean>
</beans>